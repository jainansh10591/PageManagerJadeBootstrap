<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/head %>
</head>

<body>

	<div class="header">
		<% include ../partials/header %>
	</div>


	<div class="container">
	    <div class="row-fluid">
	        <div class="span12 heading white">
	        	<h1><%= page_name %></h1>
	        	<h4><%= page_about%></h4>
	        </div>
	    </div>
	    <div class="row-fluid ">  
			<% if(posts.length != 0){ %>
				<div class="white page-table span12">
					<div class="page-table-header span12">
						<div class="span8 page-table-data page-table-header-data">Posts</div>
						<div class="span4 page-table-data page-table-header-data">Published</div>
					</div>
					<% for(var i=0; i < posts.length; i++) { %>
						<div class="page-table-content post-row">
					    	<div class="span8 page-table-data"><a href='/post/<%= posts[i].id %>'> <%= posts[i].message %> </a></div>
					    	<div class="span4 page-table-data"><%= posts[i].created_time %></div>
						</div>
					<% } %>
				</div>
			<% } else{ %>  
			   <div> No Posts on this page !</div>
			<% } %>	        
	    </div>
	</div>

	<footer class="footer">
		<% include ../partials/footer %>
	</footer>

</body>
</html>